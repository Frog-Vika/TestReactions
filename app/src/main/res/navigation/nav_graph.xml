<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment"
    tools:ignore="InvalidNavigation">


    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.testreactions.fragments.StartFragment"
        android:label="First">
        <action
            android:id="@+id/action_start_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.testreactions.fragments.HomeFragment"
        android:label="Second">
        <action
            android:id="@+id/action_home_to_play"
            app:destination="@id/playFragment" />
        <action
            android:id="@+id/action_home_to_record"
            app:destination="@id/recordFragment" />
        <action
            android:id="@+id/action_home_to_start"
            app:destination="@id/startFragment" />
    </fragment>

    <fragment
        android:id="@+id/playFragment"
        android:name="com.example.testreactions.fragments.PlayFragment"
        android:label="Second">
        <action
            android:id="@+id/action_play_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/recordFragment"
        android:name="com.example.testreactions.fragments.RecordFragment"
        android:label="Second">
        <action
            android:id="@+id/action_record_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>